datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model User {
    id Int  @id @default(autoincrement())
    email String @unique
    firstName String
    lastName String 
    birthdate DateTime @updatedAt
    role UserRole
    timeZone DateTime @updatedAt
    timeStamp DateTime @updatedAt
    appointments Appointment[]
}

model Appointment {
    id Int  @id @default(autoincrement())
    startTime DateTime @updatedAt
    endTime DateTime @updatedAt
    userId Int
    toUser User @relation(fields: [userId], references: [id])
    
}

enum UserRole {
    DOCTOR
    THERAPY
    CARE_MANAGER
}



